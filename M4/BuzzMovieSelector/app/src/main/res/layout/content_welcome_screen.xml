<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.teamtitans.buzzmovieselector.WelcomeScreen"
    tools:showIn="@layout/activity_welcome_screen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/WelcomeLoginButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#00254c"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerButton"
        android:background="#00254c"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="225dp"
        android:layout_alignEnd="@+id/WelcomeLoginButton"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/welcomeWarning"
        android:layout_alignTop="@+id/registerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="#ff3434" />
</RelativeLayout>
